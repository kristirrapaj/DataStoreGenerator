<Window x:Name="ProgramWindow" SizeChanged="OnWindowSizeChanged" x:Class="DS_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <Grid x:Name="BaseGrid">

        <!-- Config File Path -->
        <StackPanel x:Name="mConfigFilePanel">
            <Label x:Name="mSelectConfigFileLabel" Content="Select configuration file path:" />
            <!-- Browse Button -->
            <Button x:Name="mSelectConfigFileButton" Content="Browse" Click="OnOpenDialogButtonClick" />
        </StackPanel>

        <!-- Directory Path -->
        <StackPanel x:Name="mDirectoryPanel">
            <Label x:Name="mDirectoryLabel" Content="Select final write path:" />
            <!-- Browse Button -->
            <Button x:Name="mDirectoryButton" Content="Browse" Click="OnOpenDialogButtonClick" />
        </StackPanel>


        <!-- Datastore Type -->
        <StackPanel x:Name="mDatastorePanel">
            <Label x:Name="mDatastoreLabel" Content="Select Database Type: " />
            <ComboBox x:Name="mCbDatastoreType"
                      ItemsSource="{Binding mAvailableDatastore}"
                      SelectionChanged="OnDatastoreSelectionChanged" />
        </StackPanel>


        <!-- DataProvider Type -->
        <StackPanel x:Name="mProviderPanel">
            <Label x:Name="mProviderLabel" Content="Select DataProvider Type: " Foreground="#333" />
            <ComboBox x:Name="mCbDataProviderType"
                      ItemsSource="{Binding mAvailableDataProviders}"
                      SelectionChanged="OnDatabaseSelectionChanged" />
        </StackPanel>

        <!-- Select Table -->
        <Grid x:Name="TablesGrid">
            <StackPanel x:Name="TablesPanel">
                <Label Content="Select Table: " />
                <ListView x:Name="TablesListView"
                          ItemsSource="{Binding AvailableDataTables}"
                          SelectionChanged="OnDataTableSelectionChanged" />
            </StackPanel>
            <StackPanel x:Name="SelectedTablesPanel">
                <Label x:Name="SelectedTablesLabel" Content="Tables selected: " />
                <ListBox Name="SelectedTablesListBox" ItemsSource="{Binding _tablesSelected}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel x:Name="SelectedTablesListBoxPanel">
                                <TextBlock x:Name="SelectedTablesTextBlock" Text="{Binding}" />
                                <Button Name="RemoveButton" Content="REMOVE" Click="OnTableRemoveButtonSelect" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>


        <StackPanel x:Name="GeneratePanel">
            <Button x:Name="GenerateButton" Content="Generate" Click="OnGenerateButtonSelected" />
        </StackPanel>
        <Label x:Name="ConsoleLabel" />
    </Grid>
</Window>