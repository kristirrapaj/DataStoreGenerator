<Window x:Class="DS_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dsGenerator="clr-namespace:DS_Generator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 30, 0, 0">
                        <Label Content="Select Database Type:  "></Label>
                        <ComboBox x:Name="CbDatabaseType" Width="200" Height="20" SelectedIndex="0" ItemsSource="{Binding Elements}" SelectionChanged="OnComboBoxSelectionChanged">
                                
                        </ComboBox>
                </StackPanel>
        </Grid>
</Window>