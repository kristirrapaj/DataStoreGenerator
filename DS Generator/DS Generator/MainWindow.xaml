<Window x:Name="ProgramWindow" SizeChanged="OnWindowSizeChanged" x:Class="DS_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <Grid x:Name="BaseGrid">
        <!-- Config Path -->
        <StackPanel x:Name="ConfigPanel">
            <Label x:Name="SelectConfigLabel" Content="Select configuration file path:" />
            <!-- Browse Button -->
            <Button x:Name="SelectConfigButton" Content="Browse" Click="OnBrowseButtonClick" />
        </StackPanel>
        <StackPanel x:Name="OutputPanel">
            <Label x:Name="OutputLabel" Content="Select final write path:" />
            <!-- Browse Button -->
            <Button x:Name="OutputButton" Content="Browse" Click="OnFinalBrowseButtonClick" />
        </StackPanel>
        <!-- Database Type -->
        <StackPanel x:Name="DatabasePanel">
            <Label x:Name="DatabaseLabel" Content="Select Database Type: " />
            <ComboBox x:Name="CbDataProviderType"
                      ItemsSource="{Binding AvailableDataProviders}"
                      SelectionChanged="OnDataProviderSelectionChanged" />
        </StackPanel>


        <!-- DataProvider Type -->
        <StackPanel x:Name="ProviderPanel">
            <Label Content="Select DataProvider Type: " Foreground="#333" />
            <ComboBox x:Name="CbDatabaseType"
                      ItemsSource="{Binding AvailableDatabases}"
                      SelectionChanged="OnDatabaseSelectionChanged" />
        </StackPanel>

        <!-- Select Table -->
        <Grid x:Name="TablesGrid">
            <StackPanel x:Name="TablesPanel">
                <Label Content="Select Table: "/>
                <ListView x:Name="TablesListView"
                          ItemsSource="{Binding AvailableDataTables}"
                          SelectionChanged="OnDataTableSelectionChanged" />
            </StackPanel>
            <StackPanel x:Name="SelectedTablesPanel">
                <Label x:Name="SelectedTablesLabel" Content="Tables selected: " />
                <ListBox Name="SelectedTablesListBox" ItemsSource="{Binding _tablesSelected}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel x:Name="SelectedTablesListBoxPanel">
                                <TextBlock x:Name="SelectedTablesTextBlock" Text="{Binding}" />
                                <Button Name="RemoveButton" Content="REMOVE" Click="OnTableRemoveButtonSelect" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>


        <StackPanel x:Name="GeneratePanel">
            <Button x:Name="GenerateButton" Content="Generate" Click="OnGenerateButtonSelected" />
        </StackPanel>
        <Label x:Name="ConsoleLabel" />
    </Grid>
</Window>