<Window x:Class="DS_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#F0F0F0">
        <!-- Config Path -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 5, 0, 0">
            <Label Content="Select configuration file path:"></Label>
            <!-- Browse Button -->
            <Button Content="Browse" Click="OnBrowseButtonClick"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 30, 0, 0">
            <Label Content="Select final write path:"></Label>
            <!-- Browse Button -->
            <Button Content="Browse" Click="OnFinalBrowseButtonClick"></Button>
        </StackPanel>
        <!-- Database Type -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0">
            <Label Content="Select Database Type: " Foreground="#333" />
            <ComboBox x:Name="CbDataProviderType" Width="200" Height="20"
                      ItemsSource="{Binding AvailableDataProviders}"
                      SelectionChanged="OnDataProviderSelectionChanged"
                      HorizontalAlignment="Stretch" />
        </StackPanel>

        <!-- DataProvider Type -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,90,0,0">
            <Label Content="Select DataProvider Type: " Foreground="#333" />
            <ComboBox x:Name="CbDatabaseType" Width="200" Height="20"
                      ItemsSource="{Binding AvailableDatabases}"
                      SelectionChanged="OnDatabaseSelectionChanged"
                      HorizontalAlignment="Stretch" />
        </StackPanel>

        <!-- Select Table -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,120,0,0">
            <Label Content="Select Table: " Foreground="#333" />
            <ComboBox x:Name="CbDataTableType" Width="150" Height="20"
                      StaysOpenOnEdit="True"
                      IsEditable="True" IsTextSearchEnabled="True"
                      ItemsSource="{Binding AvailableDataTables}"
                      SelectionChanged="OnDataTableSelectionChanged"
                      HorizontalAlignment="Stretch" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0">
            <Label Content="Tables selected: "></Label>
            <ListBox Name="MyListBox" Width="200" ItemsSource="{Binding _tablesSelected}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}"/>
                            <Button Name="remove_Button" Content="REMOVE"  Click="OnTableRemoveButtonSelect"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,180,0,0">
            <Button Content="Generate" Click="OnGenerateButtonSelected"></Button>
        </StackPanel>
    </Grid>
</Window>