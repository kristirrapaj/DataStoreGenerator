<Window x:Name="ProgramWindow" SizeChanged="OnWindowSizeChanged" x:Class="DS_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        >
    <Grid x:Name="BaseGrid" Background="#F0F0F0">
        <!-- Config Path -->
        <StackPanel x:Name="ConfigPanel">
            <Label x:Name="SelectConfigLabel" Content="Select configuration file path:"></Label>
            <!-- Browse Button -->
            <Button x:Name="SelectConfigButton" Content="Browse" Click="OnBrowseButtonClick"></Button>
        </StackPanel>
        <StackPanel x:Name="OutputPanel">
            <Label x:Name="OutputLabel" Content="Select final write path:"></Label>
            <!-- Browse Button -->
            <Button x:Name="OutputButton" Content="Browse" Click="OnFinalBrowseButtonClick"></Button>
        </StackPanel>
        <!-- Database Type -->
        <StackPanel x:Name="DatabasePanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0">
            <Label x:Name="DatabaseLabel" Content="Select Database Type: " Foreground="#333" />
            <ComboBox x:Name="CbDataProviderType" Width="200" Height="20"
                      ItemsSource="{Binding AvailableDataProviders}"
                      SelectionChanged="OnDataProviderSelectionChanged"
                      HorizontalAlignment="Stretch" />
        </StackPanel>
        
        

        <!-- DataProvider Type -->
        <StackPanel x:Name="ProviderPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,90,0,0">
            <Label Content="Select DataProvider Type: " Foreground="#333" />
            <ComboBox x:Name="CbDatabaseType" Width="200" Height="20"
                      ItemsSource="{Binding AvailableDatabases}"
                      SelectionChanged="OnDatabaseSelectionChanged"
                      HorizontalAlignment="Stretch" />
        </StackPanel>

        <!-- Select Table -->
        <Grid x:Name="TablesGrid">
            <StackPanel x:Name="TablesPanel" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,120,0,0">
                <Label Content="Select Table: " Foreground="#333" />
                <ListView x:Name="TablesListView" Width="150" Height="100"
                          ItemsSource="{Binding AvailableDataTables}"
                          SelectionChanged="OnDataTableSelectionChanged"
                          HorizontalAlignment="Stretch" />
            </StackPanel>
            <StackPanel x:Name="SelectedTablesPanel" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,120,0,0">
                <Label x:Name="SelectedTablesLabel" Content="Tables selected: "></Label>
                <ListBox Name="SelectedTablesListBox" Width="200" Height="90" ItemsSource="{Binding _tablesSelected}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel x:Name="SelectedTablesListBoxPanel" Orientation="Horizontal" HorizontalAlignment="Stretch">
                                <TextBlock x:Name="SelectedTablesTextBlock" Text="{Binding}"/>
                                <Button Name="RemoveButton" Content="REMOVE"  Click="OnTableRemoveButtonSelect"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Grid>
        
        
        <StackPanel x:Name="GeneratePanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,250,0,0">
            <Button x:Name="GenerateButton" Content="Generate" Click="OnGenerateButtonSelected"></Button>
        </StackPanel>
        <Label x:Name="ConsoleLabel" HorizontalContentAlignment="Center" HorizontalAlignment="Center" FontSize="12" Margin="0, 300, 0, 0"></Label>
    </Grid>
</Window>