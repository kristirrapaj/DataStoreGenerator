<Window x:Class="DS_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dsGenerator="clr-namespace:DS_Generator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,50,0,0" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Label">
                    <Setter Property="Width" Value="250" />
                    <Setter Property="Margin" Value="0" />
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Width" Value="250" />
                    <Setter Property="Margin" Value="0" />
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="70"/>
                    <Setter Property="Background" Value="#3498db"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </StackPanel.Resources>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Insert database configuration files path:" />
                <TextBox Name="ConfigPathTextBox" />
                <Button Content="Select" Click="OnConfigurationPathSelected"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Insert final files path:" />
                <TextBox Name="FinalPathTextBox" />
                <Button Content="Select" Click="OnFinalPathSelected"/>
            </StackPanel>
            <Button Content="START"  Click="OnStartSelected" Width="150" HorizontalAlignment="Center" Margin="0, 30, 0 ,0"/>
        </StackPanel>
    </Grid>
</Window>